<custom-nav-bar title="全部" />

<view class="container">
  <view class="grid-list">
    <view class="grid-item" 
      wx:for="{{allContentList}}" 
      wx:key="_id"
      data-info="{{item}}"
      bindtap="onImageTap">
      <image src="{{item.main_url}}" mode="aspectFill" class="grid-image" />
    </view>
  </view>
  <view class="no-more" wx:if="{{allContentList.length === 0}}">
    <text>暂无内容</text>
  </view>
</view> 