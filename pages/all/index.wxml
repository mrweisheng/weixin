<custom-nav-bar title="全部" />

<view class="container">
  <view class="image-grid">
    <view class="image-item" 
      wx:for="{{imageList}}" 
      wx:key="_id"
      data-info="{{item}}"
      bindtap="onImageTap">
      <image 
        src="{{item.imageUrl}}" 
        mode="aspectFill" 
        class="item-image"
        lazy-load 
      />
      <view class="item-info">
        <view class="info-stats">
          <view class="stat-item">
            <image src="/assets/images/likes.png" mode="aspectFit" />
            <text>{{item.like_count || 0}}</text>
          </view>
          <view class="stat-item">
            <image src="/assets/images/favorites.png" mode="aspectFit" />
            <text>{{item.favorite_count || 0}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="loading-status" wx:if="{{loading || !hasMore}}">
    <text>{{loading ? '加载中...' : '没有更多了'}}</text>
  </view>
</view> 