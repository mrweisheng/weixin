.container {
  padding: 24rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.grid-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  width: 100%;
}

.grid-item {
  position: relative;
  padding-bottom: 133.33%;
  border-radius: 12rpx;
  overflow: hidden;
}

.grid-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.no-more {
  text-align: center;
  padding: 32rpx;
  color: #999;
  font-size: 28rpx;
} 