.page {
  min-height: 100vh;
  background: #f8f8f8;
  position: relative;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(135deg, #8E9AAF 0%, #CBC0D3 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.user-card {
  margin: 40rpx 32rpx 0;
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.info-content {
  margin-left: 24rpx;
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.join-time {
  font-size: 24rpx;
  color: #999;
}

.stats-bar {
  display: flex;
  padding: 24rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-item .count {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
}

.feature-list {
  margin: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 0 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.feature-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-left {
  display: flex;
  align-items: center;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.feature-title {
  font-size: 28rpx;
  color: #333;
}

.feature-right {
  display: flex;
  align-items: center;
}

.feature-count {
  font-size: 28rpx;
  color: #999;
  margin-right: 8rpx;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
}

.login-btn {
  padding: 0;
  font-size: 32rpx;
  font-weight: normal;
  color: #8E9AAF;
  background: none;
  line-height: 1.5;
}

.login-btn::after {
  display: none;
}

.login-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 昵称输入框样式优化 */
.nickname-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nickname-content {
  width: 560rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.nickname-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  text-align: center;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  background: #8E9AAF;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.confirm-btn[disabled] {
  background: rgba(142, 154, 175, 0.6);
  color: #fff;
}

/* 底部信息样式 */
.footer-info {
  margin: 48rpx 32rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
  padding-top: 48rpx;
}

.footer-info::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #CBC0D3;
  border-radius: 2rpx;
}

.version {
  font-size: 24rpx;
  color: #8E9AAF;
  letter-spacing: 2rpx;
}

.copyright {
  font-size: 20rpx;
  color: #CBC0D3;
  letter-spacing: 1rpx;
}

/* 底部装饰 */
.footer-decoration {
  margin: 32rpx auto;
  width: 120rpx;
  height: 120rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer-decoration::before,
.footer-decoration::after {
  content: '';
  position: absolute;
  border-radius: 50%;
  animation: ripple 4s ease-in-out infinite;
}

.footer-decoration::before {
  width: 80rpx;
  height: 80rpx;
  background: rgba(142, 154, 175, 0.1);
  animation-delay: -2s;
}

.footer-decoration::after {
  width: 60rpx;
  height: 60rpx;
  background: rgba(203, 192, 211, 0.1);
}

/* 中间的水墨点 */
.ink-dot {
  width: 40rpx;
  height: 40rpx;
  background: rgba(142, 154, 175, 0.15);
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}

.ink-dot::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  background: rgba(203, 192, 211, 0.2);
  border-radius: 40%;
  transform: translate(-50%, -50%) rotate(0deg);
  animation: inkRotate 8s linear infinite;
}

@keyframes ripple {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.2;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
}

@keyframes inkRotate {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
} 