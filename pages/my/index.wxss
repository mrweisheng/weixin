.page {
  min-height: 100vh;
  background: #f6f7f9;
  padding: 20px 16px;
}

/* 用户卡片样式 */
.user-card {
  background: #fff;
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20px;
}

.avatar {
  width: 72px;
  height: 72px;
  border-radius: 50%;
  background: #f0f0f0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  object-fit: cover;
}

.info-content {
  flex: 1;
}

.name {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin-bottom: 6px;
  display: block;
}

.bio {
  font-size: 14px;
  color: #999;
}

.login-text {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  margin-bottom: 6px;
  display: block;
}

.login-desc {
  font-size: 14px;
  color: #999;
}

/* 功能卡片样式 */
.cards-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.feature-card {
  background: #fff;
  border-radius: 16px;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.98);
  background: #fafafa;
}

.card-content {
  display: flex;
  align-items: center;
  gap: 16px;
}

.card-icon {
  width: 32px;
  height: 32px;
  padding: 8px;
  background: #f8f9fa;
  border-radius: 12px;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.card-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.card-desc {
  font-size: 12px;
  color: #999;
}

.card-arrow {
  font-size: 24px;
  color: #ccc;
  font-family: serif;
}

.login-btn {
  padding: 0;
  width: auto !important;
  font-size: 18px;
  font-weight: 500;
  color: #07c160;
  background: none;
  line-height: 1.5;
  margin: 0;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.8;
}

.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.auth-content {
  background: #fff;
  border-radius: 16px;
  padding: 24px;
  width: 80%;
  max-width: 300px;
}

.auth-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8px;
  text-align: center;
}

.auth-desc {
  font-size: 14px;
  color: #999;
  display: block;
  margin-bottom: 20px;
  text-align: center;
}

.auth-buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.auth-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
}

.nickname-input {
  border: 1px solid #eee;
  padding: 8px 12px;
  border-radius: 8px;
  font-size: 16px;
}

/* 修改昵称弹窗样式 */
.nickname-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.nickname-content {
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  width: 80%;
  max-width: 280px;
}

.nickname-title {
  font-size: 16px;
  color: #333;
  text-align: center;
  margin-bottom: 16px;
  display: block;
}

.nickname-input {
  width: 100%;
  height: 44px;
  border: 1px solid #eee;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 16px;
  box-sizing: border-box;
  margin-bottom: 16px;
}

.confirm-btn {
  background: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  width: 100% !important;
  height: 44px;
  line-height: 44px;
}

.confirm-btn[disabled] {
  background: #07c160;
  opacity: 0.5;
}

.confirm-btn::after {
  border: none;
} 