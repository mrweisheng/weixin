/* 水墨装饰 */
.ink-decoration {
  position: absolute;
  width: 120rpx;
  height: 200rpx;
  background: radial-gradient(ellipse at center, rgba(180, 165, 165, 0.1) 0%, transparent 70%);
  filter: blur(10rpx);
  animation: inkFloat 8s ease-in-out infinite;
}

.ink-decoration.left {
  left: -20rpx;
  top: 30%;
  transform: rotate(-45deg);
  animation-delay: -4s;
}

.ink-decoration.right {
  right: -20rpx;
  top: 40%;
  transform: rotate(45deg);
}

.quote-content {
  position: relative;
  display: inline-block;
  max-width: 80%;
}

.quote-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.quote-title {
  font-size: 32rpx;
  color: #B4A5A5;
  margin: 0 24rpx;
  letter-spacing: 4rpx;
}

.ink-line {
  height: 2rpx;
  width: 60rpx;
  background: linear-gradient(90deg, transparent, #B4A5A5, transparent);
}

.quote-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  letter-spacing: 2rpx;
  display: inline-block;
  margin: 16rpx 0;
  animation: fadeIn 1s ease-out;
}

.quote-mark {
  font-size: 32rpx;
  color: #B4A5A5;
  font-weight: 300;
  opacity: 0.8;
  display: inline-block;
  transform: translateY(4rpx);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes inkFloat {
  0%, 100% {
    transform: rotate(-45deg) translateY(0);
    opacity: 0.1;
  }
  50% {
    transform: rotate(-45deg) translateY(-20rpx);
    opacity: 0.15;
  }
}

/* 中间的水墨点 */
.ink-dot {
  width: 40rpx;
  height: 40rpx;
  background: rgba(142, 154, 175, 0.15);
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}

.ink-dot::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  background: rgba(203, 192, 211, 0.2);
  border-radius: 40%;
  transform: translate(-50%, -50%) rotate(0deg);
  animation: inkRotate 8s linear infinite;
}

@keyframes ripple {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.2;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
}

@keyframes inkRotate {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

