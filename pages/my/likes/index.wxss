.container {
  padding: 24rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  width: 100%;
}

.image-item {
  position: relative;
  padding-bottom: 133.33%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.image {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.stats {
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.stat-item image {
  width: 32rpx;
  height: 32rpx;
}

.stat-item text {
  font-size: 24rpx;
  color: #fff;
}

.empty-tip {
  text-align: center;
  padding: 32rpx;
  color: #999;
  font-size: 28rpx;
} 