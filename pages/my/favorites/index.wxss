.container {
  padding: 24rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.grid-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  width: 100%;
}

.grid-item {
  position: relative;
  padding-bottom: 133.33%;
  border-radius: 12rpx;
  overflow: hidden;
}

.grid-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx;
  background: linear-gradient(transparent, rgba(0,0,0,0.5));
}

.info-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-item image {
  width: 32rpx;
  height: 32rpx;
}

.empty-tip {
  text-align: center;
  padding: 32rpx;
  color: #999;
  font-size: 28rpx;
} 