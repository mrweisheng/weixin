<view class="container">
  <view class="grid-list">
    <view class="grid-item" 
      wx:for="{{imageList}}" 
      wx:key="_id"
      data-info="{{item}}"
      bindtap="onImageTap">
      <image src="{{item.main_url}}" mode="aspectFill" class="grid-image" />
      <view class="item-info">
        <view class="info-stats">
          <view class="stat-item">
            <image src="/assets/images/likes.png" mode="aspectFit" />
            <text>{{item.likes || 0}}</text>
          </view>
          <view class="stat-item">
            <image src="/assets/images/favorites.png" mode="aspectFit" />
            <text>{{item.collection || 0}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="empty-tip" wx:if="{{!loading && imageList.length === 0}}">
    <text>暂无收藏内容</text>
  </view>
</view> 