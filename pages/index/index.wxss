/**index.wxss**/
.userinfo {
  display: none;
}

.userinfo-avatar {
  display: none;
}

.usermotto {
  display: none;
}

.container {
  padding: 24rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.banner {
  width: 100%;
  height: 360rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx 24rpx 0;
  background: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.current-date {
  font-size: 24rpx;
  color: #999;
}

.recommend-section {
  background: #fff;
  border-radius: 12rpx;
  margin: 0 -24rpx;
  margin-bottom: 24rpx;
  width: 100vw;
}

.recommend-scroll {
  width: 100%;
}

.recommend-list {
  display: flex;
  padding: 24rpx;
  width: max-content;
}

.recommend-item {
  margin-right: 24rpx;
  width: 220rpx;
  flex-shrink: 0;
}

.recommend-item:last-child {
  margin-right: 24rpx;
}

.recommend-image {
  width: 220rpx;
  height: 300rpx;
  border-radius: 12rpx;
}

.grid-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
  width: 100%;
}

.grid-item {
  position: relative;
  padding-bottom: 133.33%;
  border-radius: 12rpx;
  overflow: hidden;
}

.grid-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.view-all {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  color: #666;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.all-section {
  background: #fff;
  border-radius: 12rpx;
  margin: 0 -24rpx;
  width: 100vw;
  box-sizing: border-box;
} 