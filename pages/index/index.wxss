/**index.wxss**/
.userinfo {
  display: none;
}

.userinfo-avatar {
  display: none;
}

.usermotto {
  display: none;
}

.container {
  padding: 24rpx;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.banner {
  width: 100%;
  height: 420rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx 24rpx 0;
  background: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.current-date {
  font-size: 24rpx;
  color: #999;
}

.recommend-section {
  background: #fff;
  border-radius: 12rpx;
  margin: 0 -24rpx;
  margin-bottom: 24rpx;
  width: 100vw;
}

.recommend-scroll {
  width: 100%;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.recommend-scroll::-webkit-scrollbar {
  display: none;
}

.recommend-list {
  display: flex;
  padding: 24rpx;
  width: max-content;
}

.recommend-item {
  margin-right: 24rpx;
  width: 260rpx;
  flex-shrink: 0;
}

.recommend-item:last-child {
  margin-right: 24rpx;
}

.recommend-image {
  width: 260rpx;
  height: 360rpx;
  border-radius: 12rpx;
}

.grid-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.grid-item {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  aspect-ratio: 3/4;
}

.grid-item.view-all {
  position: relative;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.grid-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.view-all {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 28rpx;
  position: absolute;
  padding-bottom: 0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.view-all text {
  margin-right: 4rpx;
}

.view-all::after {
  content: '>';
  color: #666;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.all-section {
  background: #fff;
  border-radius: 12rpx;
  margin: 0 -24rpx;
  width: 100vw;
  box-sizing: border-box;
}

/* 骨架屏动画 */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.skeleton {
  padding: 32rpx;
}

.skeleton-banner {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: shimmer 1.4s ease infinite;
}

.skeleton-section {
  margin-top: 48rpx;
}

.skeleton-title {
  width: 200rpx;
  height: 40rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: shimmer 1.4s ease infinite;
  border-radius: 8rpx;
  margin-bottom: 32rpx;
}

.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.skeleton-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.skeleton-image {
  width: 100%;
  height: 240rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: shimmer 1.4s ease infinite;
}

.skeleton-info {
  padding: 16rpx;
}

.skeleton-text {
  width: 80%;
  height: 32rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: shimmer 1.4s ease infinite;
  border-radius: 4rpx;
  margin-bottom: 12rpx;
}

.skeleton-text-sm {
  width: 60%;
  height: 24rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: shimmer 1.4s ease infinite;
  border-radius: 4rpx;
}

.image-item {
  position: relative;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item .thumbnail,
.image-item .image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: opacity 0.3s ease;
}

.hidden {
  opacity: 0;
}

.thumbnail {
  filter: blur(10px);
  transform: scale(1.1);
}

.grid-item .image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12rpx;
} 