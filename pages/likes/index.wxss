.container {
  background: #f8f8f8;
  min-height: 100vh;
  padding: 10px;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.image-item {
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.item-image {
  width: 100%;
  height: 200px;
}

.item-info {
  padding: 8px;
}

.item-time {
  font-size: 12px;
  color: #999;
  display: block;
  margin-bottom: 4px;
}

.info-stats {
  display: flex;
  gap: 10px;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  color: #666;
}

.icon-like.active {
  color: #ff4444;
}

.loading-status {
  text-align: center;
  padding: 15px;
  color: #999;
  font-size: 14px;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.empty-image {
  width: 200px;
  height: 200px;
  margin-bottom: 10px;
}

.empty-text {
  font-size: 14px;
  color: #999;
} 